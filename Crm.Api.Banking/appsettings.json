{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CrmBankingDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=false"
  },
  "FileStorage": {
    "RootPath": "App_Data/Banking",
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [ ".xlsx", ".xls", ".pdf", ".csv" ]
  },
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Issuer": "https://localhost:5001",
    "Audience": "crm.banking.api",
    "RequireHttpsMetadata": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://crm.example.com"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "EnableSensitiveData": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "MaxImportFileSizeMB": 50,
    "DefaultPageSize": 50,
    "EnableDetailedErrors": true
  }
}