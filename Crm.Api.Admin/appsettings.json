{
  "ConnectionStrings": {
    "AdminConnection": "Server=(localdb)\\mssqllocaldb;Database=CrmAdminDb;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=false"
  },
  "Authentication": {
    "Authority": "https://localhost:5001",
    "Issuer": "https://localhost:5001",
    "Audience": "crm.admin.api",
    "RequireHttpsMetadata": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://admin.crm.example.com"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "EnableSensitiveData": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/admin-api-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AdminSettings": {
    "DefaultPageSize": 50,
    "MaxExportRecords": 5000,
    "PasswordResetExpiryHours": 24,
    "SessionTimeoutMinutes": 60
  },
  "AllowedHosts": "*"
}