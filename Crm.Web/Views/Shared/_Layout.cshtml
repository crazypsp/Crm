@using Crm.Web.Services
@inject IMockDataService MockDataService

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mali Müşavir CRM</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var kullaniciId = Context.Session.GetString("KullaniciId");
        var adSoyad = Context.Session.GetString("AdSoyad");
        var rol = Context.Session.GetString("Rol");
        var avatar = Context.Session.GetString("Avatar");
    }

    @if (!string.IsNullOrEmpty(kullaniciId))
    {
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <h3><i class="fas fa-chart-line me-2"></i>Mali CRM</h3>
                <p>Profesyonel Yönetim</p>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")"
                       href="@Url.Action("Index", "Dashboard")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Musteri" ? "active" : "")"
                       href="@Url.Action("Index", "Musteri")">
                        <i class="fas fa-users"></i>
                        <span class="nav-text">Müşteriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Evrak" ? "active" : "")"
                       href="@Url.Action("Index", "Evrak")">
                        <i class="fas fa-file-invoice"></i>
                        <span class="nav-text">Evraklar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Banka" ? "active" : "")"
                       href="@Url.Action("Index", "Banka")">
                        <i class="fas fa-university"></i>
                        <span class="nav-text">Banka</span>
                    </a>
                </li>
                @if (rol == "MaliMüşavir")
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Personel" ? "active" : "")"
                           href="@Url.Action("Index", "Personel")">
                            <i class="fas fa-user-tie"></i>
                            <span class="nav-text">Personeller</span>
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "IsTakip" ? "active" : "")"
                       href="@Url.Action("Index", "IsTakip")">
                        <i class="fas fa-tasks"></i>
                        <span class="nav-text">İş Takip</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Rapor" ? "active" : "")"
                       href="@Url.Action("Index", "Rapor")">
                        <i class="fas fa-chart-bar"></i>
                        <span class="nav-text">Raporlar</span>
                    </a>
                </li>
            </ul>

            <div class="user-info">
                <div class="d-flex align-items-center">
                    <img src="@avatar" alt="" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <h6 class="mb-0">@adSoyad</h6>
                        <small class="text-muted">@rol</small>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-sm btn-outline-light w-100">
                        <i class="fas fa-sign-out-alt me-1"></i>Çıkış Yap
                    </a>
                </div>
            </div>
        </nav>
    }

    <!-- Main Content -->
    <main class="main-content">
        @if (!string.IsNullOrEmpty(kullaniciId))
        {
            <div class="top-bar mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                        <p class="text-muted mb-0">Hoş geldiniz, @adSoyad</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <!-- Date Display -->
                        <div class="bg-white px-3 py-2 rounded shadow-sm">
                            <i class="fas fa-calendar me-2 text-primary"></i>
                            <span id="currentDate">@DateTime.Now.ToString("dd MMMM yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>