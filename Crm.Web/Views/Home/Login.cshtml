@model Crm.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mali Müşavir CRM</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .login-container {
            background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 450px;
            padding: 40px;
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
        }

            .brand-logo i {
                font-size: 3rem;
                margin-bottom: 15px;
                color: #3498db;
            }

        .btn-login {
            background: linear-gradient(to right, #3498db, #2980b9);
            border: none;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .demo-credentials {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="brand-logo">
                <i class="fas fa-chart-line"></i>
                <h2>Mali Müşavir CRM</h2>
                <p class="text-muted">Profesyonel Mali Yönetim Sistemi</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" />
                    <label asp-for="KullaniciAdi"><i class="fas fa-user me-2"></i>Kullanıcı Adı</label>
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
                    <label asp-for="Sifre"><i class="fas fa-lock me-2"></i>Şifre</label>
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-login btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </button>
                </div>
            </form>

            <div class="demo-credentials mt-3">
                <h6><i class="fas fa-key me-2"></i>Demo Giriş Bilgileri:</h6>
                <div class="row">
                    <div class="col-6">
                        <small><strong>Mali Müşavir:</strong><br>admin / 123</small>
                    </div>
                    <div class="col-6">
                        <small><strong>Personel:</strong><br>personel / 123</small>
                    </div>
                    <div class="col-12 mt-2">
                        <small><strong>Firma:</strong><br>firma1 / 123</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>